<%= @post.title %>
<%= @post.content %>

<h1> Create a new comment </h1>
<%= form_for [ @post, @comment ] do |f| %>
        <p>
            <%= f.label :title %><br/>
            <%= f.text_field :title %>
        </p>
        <p>
            <%= f.label :content %><br/>
            <%= f.text_area :content %>
        </p>
        <p>
            <%= f.label :rating %><br/>
            <%= f.text_field :rating %>
        </p>
        <p>
            <%= f.submit 'Submit' %>
        </p>
<% end %>

<h1>Comments</h1>
<% @post.comments.reverse.each do |comment| %>

    <p><%= comment.title %> </p>
    <p><%= comment.content %> </p>
    <p><%= comment.rating %> </p>
    <hr>
    
<% end %>